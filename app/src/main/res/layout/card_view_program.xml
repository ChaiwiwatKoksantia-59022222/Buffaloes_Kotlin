<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/colorW"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_marginRight="16dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pridi"
                android:text="โปรแกรม"
                android:textStyle="bold"
                android:layout_gravity="bottom"
                android:textSize="24dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/program_title"
                android:fontFamily="@font/pridi_extralight"
                android:text="รายละเอียด"
                android:layout_marginLeft="5dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="16dp"
                android:textSize="20dp" />

        </LinearLayout>

        <ImageView
            android:visibility="gone"
            android:id="@+id/program_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="300dp"
            android:maxWidth="400dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:src="@drawable/s1" />

        <TextView
            android:id="@+id/program_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pridi_extralight"
            android:text="รายละเอียด"
            android:layout_marginTop="16dp"
            android:textSize="20dp" />

    </LinearLayout>

    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/tab1MainOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerInParent="false"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/colorS2Text"
            app:cardCornerRadius="15dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:paddingRight="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:visibility="gone"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/addevent" />

                <TextView
                    android:id="@+id/main_date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/pridi_extralight"
                    android:paddingBottom="0dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingTop="0dp"
                    android:text="ทดลองคำนวณด้วยโปรแกรมนี้"
                    android:textColor="#ffffff"
                    android:textSize="18dp"
                    android:textStyle="normal" />

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <RelativeLayout
            android:id="@+id/main_date_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:theme="@style/mainButton" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/line_y" />

</LinearLayout>
