<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:cardBackgroundColor="@color/colorSuperLightGreen"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/card_view_multi_text_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pridi"
                android:padding="10dp"
                android:text="ชื่อ"
                android:textColor="@color/colorW"
                android:textSize="18dp"

                android:textStyle="bold" />

            <android.support.v7.widget.CardView
                app:cardElevation="0dp"
                app:cardCornerRadius="6dp"
                app:cardBackgroundColor="@color/colorW"
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/disease_detail_view"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:layout_marginTop="0dp"
                        android:background="#FFFFFF"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/pridi"
                            android:lineSpacingExtra="1.6dp"
                            android:padding="0dp"
                            android:text="สาเหตุ"
                            android:textColor="#979797"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/card_view_multi_text_cause_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/pridi_extralight"
                            android:lineSpacingExtra="1.6dp"
                            android:padding="10dp"
                            android:text="เนื้อข้อความ"
                            android:textColor="#979797"
                            android:textSize="18dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/pridi"
                            android:lineSpacingExtra="1.6dp"
                            android:padding="0dp"
                            android:text="อาการ"
                            android:textColor="#979797"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/card_view_multi_text_symptom_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/pridi_extralight"
                            android:lineSpacingExtra="1.6dp"
                            android:padding="10dp"
                            android:text="เนื้อข้อความ"
                            android:textColor="#979797"
                            android:textSize="18dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/pridi"
                            android:lineSpacingExtra="1.6dp"
                            android:padding="0dp"
                            android:text="การรักษา"
                            android:textColor="#979797"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/card_view_multi_text_treatment_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/pridi_extralight"
                            android:lineSpacingExtra="1.6dp"
                            android:padding="10dp"
                            android:text="เนื้อข้อความ"
                            android:textColor="#979797"
                            android:textSize="18dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/disease_small_view"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:layout_marginTop="0dp"
                        android:background="#FFFFFF"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:id="@+id/card_view_multi_text_show_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:fontFamily="@font/pridi_extralight"
                            android:lineSpacingExtra="1.6dp"
                            android:padding="10dp"
                            android:text="เนื้อข้อความ"
                            android:textColor="#979797"
                            android:textSize="18dp" />



                    </LinearLayout>

                    <LinearLayout
                        android:background="@color/colorW"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/line" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="0dp"
                        android:orientation="vertical"
                        android:background="@color/colorW"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/disease_show_more_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="3dp"
                            android:layout_marginRight="0dp"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/pridi"
                            android:padding="10dp"
                            android:text="แสดงรายละเอียด"
                            android:textColor="@color/colorLightGreen"
                            android:textSize="18dp"
                            android:textStyle="normal" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>