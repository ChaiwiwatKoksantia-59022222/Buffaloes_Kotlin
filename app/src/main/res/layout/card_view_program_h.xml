<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorW"
    android:orientation="vertical"
    android:paddingBottom="0dp">

    <android.support.v7.widget.CardView
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/colorS3"
        app:contentPadding="4dp"
        app:cardCornerRadius="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/program_card_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:fontFamily="@font/pridi"
                    android:layout_marginLeft="10dp"
                    android:text="แบบที่ 0 "
                    android:padding="3dp"
                    android:textSize="20dp"
                    android:textColor="@color/colorW"
                    android:textStyle="normal"
                    android:visibility="visible" />

            </LinearLayout>

            <android.support.v7.widget.CardView
                app:cardElevation="0dp"
                app:contentPadding="10dp"
                app:cardBackgroundColor="@color/colorW"
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:visibility="visible">



                    <ImageView
                        android:id="@+id/program_card_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:adjustViewBounds="true"
                        android:maxHeight="300dp"
                        android:maxWidth="400dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/e1"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/program_card_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/pridi_extralight"
                        android:maxLines="3"
                        android:text="รายละเอียด"
                        android:textSize="20dp"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/tab1MainOff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginTop="16dp"
                        android:visibility="visible">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_alignParentBottom="false"
                            android:layout_centerInParent="false"
                            android:layout_marginBottom="0dp"
                            android:layout_marginTop="10dp"
                            app:cardBackgroundColor="@color/colorS3"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="0dp"
                                android:orientation="horizontal"
                                android:paddingRight="10dp">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="0dp"
                                    android:src="@drawable/addevent"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/program_date_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="0dp"
                                    android:layout_marginTop="0dp"
                                    android:fontFamily="@font/pridi_extralight"
                                    android:paddingBottom="0dp"
                                    android:paddingLeft="0dp"
                                    android:paddingRight="0dp"
                                    android:paddingTop="0dp"
                                    android:text="รายละเอียดเพิ่มเติม"
                                    android:textColor="#ffffff"
                                    android:textSize="18dp"
                                    android:textStyle="normal" />

                            </LinearLayout>

                        </android.support.v7.widget.CardView>


                        <RelativeLayout
                            android:id="@+id/program_date_button"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:clickable="true"
                            android:theme="@style/mainButton" />

                    </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/line_y"
        android:visibility="gone" />

</LinearLayout>
